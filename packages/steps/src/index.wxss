.modo-steps {
  overflow: hidden;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.modo-step__item {
  flex: 1;
  text-align: center;
  position: relative;
}


.modo-step__content {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  margin: 0 auto;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.modo-step__content--img {
  width: 100%;
  height: 100%;
}
.modo-step__content--img > image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.modo-step__content--text {
  background-color: #f6f6f6;
  color: #c9c9c9;
  font-weight: bold;
  font-size: 32rpx;
}

.modo-step__content--text.active {
  color: #fff;
  font-weight: 400;
}


.modo-step__line {
  position: absolute;
  right: calc(60% + 30rpx);
  top: 30rpx;
  width: calc(60% - 30rpx);
  height: 2px;
  background-color: #ebedf0;
}
